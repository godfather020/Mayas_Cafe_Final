<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Orders_Single_item_frag">

    <androidx.cardview.widget.CardView
        android:id="@+id/singleOrder_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="12dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="184dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/single_order_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="18dp"
                android:background="@drawable/mayas1024_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/singleOrder_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="#457485451"
                android:textColor="@color/Register_Title"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/single_order_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/singleOrder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="28dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="27 April 2022"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/singleOrder_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="Number of Items  5"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/single_order_img"
                app:layout_constraintTop_toBottomOf="@+id/singleOrder_num" />

            <TextView
                android:id="@+id/singleOrder_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ellipse_54"
                android:elevation="8dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:gravity="center"
                android:text="10:45\nam"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/singleOrder_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="Placed at"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/singleOrder_time"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/singleOrder_pickup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/ellipse_54__1_"
                android:elevation="8dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:gravity="center"
                android:text="11:00\nam"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textFontWeight="800"
                android:textSize="11sp"
                app:layout_constraintEnd_toStartOf="@+id/singleOrder_pick_txt"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/singleOrder_pick_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="Pickup at"
                android:layout_marginEnd="42dp"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/line_21__1_"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/singleOrder_quantity" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="42dp"
                android:layout_height="21dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/singleOrder_total"
                app:layout_constraintTop_toBottomOf="@+id/singleOrder_date" />

            <TextView
                android:id="@+id/singleOrder_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="$16"
                android:textColor="#E80937"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/singleOrder_date" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Items"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleOrder_card" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/singleOrder_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/single_order_details_rv"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <ProgressBar
        android:id="@+id/loading_singleOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>