<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/offer_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/white">

        <ImageView
            android:id="@+id/offer_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/_01_1__1_"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rectangle_141_png"/>

        <ImageButton
            android:id="@+id/copy_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/akar_icons_copy"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/offer_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/ntailu"
        android:text="Looking for a new summer Food? Get 25% off our new Recipe. Place an order before April 25 2022 "
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="#82838B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offer_card"
        />

</androidx.constraintlayout.widget.ConstraintLayout>