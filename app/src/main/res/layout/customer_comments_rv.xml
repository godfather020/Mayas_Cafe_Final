<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mayas512__1_"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custNameR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="customer Name"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:textSize="14dp"
        android:textColor="@color/Register_Title"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toEndOf="@+id/custImg"
        app:layout_constraintTop_toTopOf="@+id/custImg" />

    <TextView
        android:id="@+id/commentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Register_Title"
        android:textSize="12dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="july 24"
        app:layout_constraintStart_toStartOf="@+id/custNameR"
        app:layout_constraintTop_toBottomOf="@+id/custNameR" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/clarity_favorite_solid"
        app:layout_constraintBottom_toBottomOf="@+id/cust_rating"
        app:layout_constraintEnd_toStartOf="@+id/cust_rating"
        app:layout_constraintTop_toTopOf="@+id/cust_rating" />

    <TextView
        android:id="@+id/cust_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="4"
        android:textSize="16dp"
        android:textColor="@color/Register_Title"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/custNameR" />

    <TextView
        android:id="@+id/cust_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adsdasdafasfsfafafa"
        android:textColor="@color/Register_Title"
        android:textSize="14dp"
        android:fontFamily="@font/montserrat_medium"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custImg" />

</androidx.constraintlayout.widget.ConstraintLayout>