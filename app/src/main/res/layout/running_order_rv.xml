<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/runOrder_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="12dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/run_order_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="18dp"
                android:background="@drawable/mayas1024_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/runOrder_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="#457485451"
                android:textColor="@color/Register_Title"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/run_order_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/runOrder_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="28dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Accepted"
                android:textAlignment="center"
                android:textColor="#12971F"
                android:textFontWeight="800"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/runOrder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="27 April 2022"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/runOrder_status" />

            <TextView
                android:id="@+id/runOrder_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="Number of Items  5"
                android:textColor="@color/black"
                android:textFontWeight="800"
                app:layout_constraintStart_toEndOf="@+id/run_order_img"
                app:layout_constraintTop_toBottomOf="@+id/runOrder_num" />

            <TextView
                android:id="@+id/runOrder_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ellipse_54"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:gravity="center"
                android:text="10:45\nam"
                android:elevation="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="11dp"
                app:layout_constraintStart_toEndOf="@+id/run_order_img"
                app:layout_constraintTop_toBottomOf="@+id/runOrder_quantity" />

            <TextView
                android:id="@+id/runOrder_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="Placed at"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/runOrder_time"
                app:layout_constraintTop_toBottomOf="@+id/runOrder_quantity" />

            <TextView
                android:id="@+id/runOrder_pickup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:elevation="8dp"
                android:background="@drawable/ellipse_54__1_"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:gravity="center"
                android:text="11:00\nam"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textFontWeight="800"
                android:textSize="11dp"
                app:layout_constraintStart_toEndOf="@+id/runOrder_time_txt"
                app:layout_constraintTop_toBottomOf="@+id/runOrder_quantity" />

            <TextView
                android:id="@+id/runOrder_pick_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:text="Pickup at"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/runOrder_pickup"
                app:layout_constraintTop_toBottomOf="@+id/runOrder_quantity" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line_22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/runOrder_pickup" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/runOrder_total"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/runOrder_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="$16"
                android:textColor="#E80937"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/runOrder_cancel"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_order_details_btn"
                android:fontFamily="@font/montserrat_variablefont_wght"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="13dp"
                android:layout_marginStart="110dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>