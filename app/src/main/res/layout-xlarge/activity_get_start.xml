<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start__1"
    tools:context=".activity.GetStart">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/GetStart_Title"
        android:textAlignment="center"
        android:textColor="@color/GetStart_Title"
        android:textSize="@dimen/GetStart_Title"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/GetStart_SubTitle"
        android:textAlignment="center"
        android:textColor="@color/GetStart_SubTitle"
        android:textSize="@dimen/GetStart_SubTitle"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/GetStart_Heading"
        android:textAlignment="center"
        android:textColor="@color/GetStart_Heading"
        android:textSize="@dimen/GetStart_Heading"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/get_start"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/GetStart_ButtonTxt"
        android:gravity="center"
        android:textColor="@color/Button_txt"
        android:textAllCaps="false"
        android:textSize="@dimen/GetStart_Button_txt"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>